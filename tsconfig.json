{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/components": ["./src/components"],
      "@/components/*": ["./src/components/*"],
      "@/constants": ["./src/constants"],
      "@/constants/*": ["./src/constants/*"],
      "@/styles": ["./src/styles"],
      "@/styles/*": ["./src/styles/*"],
      "@/types": ["./src/types"],
      "@/types/*": ["./src/types/*"],
      "@/schemas": ["./src/schemas"],
      "@/schemas/*": ["./src/schemas/*"],
      "@/services": ["./src/services"],
      "@/services/*": ["./src/services/*"],
      "@/utils": ["./src/utils"],
      "@/utils/*": ["./src/utils/*"],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}